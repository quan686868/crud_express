{
  "info": {
    "name": "News API - Admin & User",
    "description": "Collection for News Management API with JWT Authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "category_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "news_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    pm.collectionVariables.set('admin_username', pm.request.body.raw.username);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/register",
              "host": ["{{base_url}}"],
              "path": ["admin", "register"]
            }
          }
        },
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', jsonData.accessToken);",
                  "    console.log('JWT Token saved:', jsonData.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/login",
              "host": ["{{base_url}}"],
              "path": ["admin", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Categories - User",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/user/categories",
              "host": ["{{base_url}}"],
              "path": ["user", "categories"]
            }
          }
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/user/categories/{{category_id}}",
              "host": ["{{base_url}}"],
              "path": ["user", "categories", "{{category_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Categories - Admin",
      "item": [
        {
          "name": "Create Category",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('category_id', jsonData.data._id);",
                  "    console.log('Category ID saved:', jsonData.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Technology\",\n  \"description\": \"Latest tech news and innovations\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/categories",
              "host": ["{{base_url}}"],
              "path": ["admin", "categories"]
            }
          }
        },
        {
          "name": "Update Category",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Technology & Innovation\",\n  \"description\": \"Updated description for tech category\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/categories/{{category_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "categories", "{{category_id}}"]
            }
          }
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/categories/{{category_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "categories", "{{category_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "News - User",
      "item": [
        {
          "name": "Get All News",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/user/news",
              "host": ["{{base_url}}"],
              "path": ["user", "news"]
            }
          }
        },
        {
          "name": "Get News by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/user/news/{{news_id}}",
              "host": ["{{base_url}}"],
              "path": ["user", "news", "{{news_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "News - Admin",
      "item": [
        {
          "name": "Create News",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('news_id', jsonData.data._id);",
                  "    console.log('News ID saved:', jsonData.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"AI Revolution: ChatGPT-5 Released\",\n  \"content\": \"OpenAI has announced the release of ChatGPT-5, marking a significant milestone in artificial intelligence development. The new model demonstrates unprecedented capabilities in reasoning, creativity, and multimodal understanding.\",\n  \"author\": \"John Smith\",\n  \"category\": \"{{category_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/news",
              "host": ["{{base_url}}"],
              "path": ["admin", "news"]
            }
          }
        },
        {
          "name": "Update News",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"AI Revolution: ChatGPT-5 Released (Updated)\",\n  \"content\": \"Updated content with more details about the release...\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/news/{{news_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "news", "{{news_id}}"]
            }
          }
        },
        {
          "name": "Delete News",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/news/{{news_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "news", "{{news_id}}"]
            }
          }
        }
      ]
    }
  ]
}